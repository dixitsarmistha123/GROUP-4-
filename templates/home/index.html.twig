{% extends 'base.html.twig' %}

{% block title %}{{project_name}} | Home{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6">
                    <div class="jumbotron">
                        <div class="col-sm-8">
                            <div class="card-body d-flex flex-column align-items-start">
                                {# <strong class="d-inline-block mb-2 text-primary">World</strong> #}
                                <h3 class="mb-0">
                                    <a class="text-dark" href="{{path('show_post', {id: post.getId()})}}">{{post.getPostTitle()}}</a>
                                </h3>
                                <div class="mb-1 text-muted">{{post.getCreated()|date(date_format)}}</div>
                                <p class="card-text mb-auto">{{post.getPostContent()|striptags|slice(0, 50)}}</p>
                                <a href="{{path('show_post', {id: post.getId()})}}">Continue reading</a>
                            </div>
                        </div>
                        {# <div class="col-sm-4"><img data-src="holder.js/200x250?theme=thumb" alt="Thumbnail [200x250]" style="max-width: 100%;" src="{{asset('https://www.google.com/imgres?imgurl=https%3A%2F%2Fblog.hootsuite.com%2Fwp-content%2Fuploads%2F2020%2F05%2Fhow-to-post-on-instagram-from-your-desktop.svg&imgrefurl=https%3A%2F%2Fblog.hootsuite.com%2Fhow-to-post-on-instagram-from-desktop%2F&tbnid=XOy3Qa_40ASVUM&vet=12ahUKEwj5upjWhqPuAhUx0XMBHbquCBYQMygMegUIARC7AQ..i&docid=vhZuJH-nCY-nGM&w=800&h=800&q=image%20post&ved=2ahUKEwj5upjWhqPuAhUx0XMBHbquCBYQMygMegUIARC7AQ')}}" data-holder-rendered="true"></div> #}
                        <div class="clearfix"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{% endblock %}
