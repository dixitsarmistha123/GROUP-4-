{% extends 'base.html.twig' %}

{% block title %}{{project_name}} | Create Post{% endblock %}

{% block body %}
    <h1>Create Post</h1>
    
    {{ form_start(postForm) }}
        <div class="form-group">
            {{ form_row(postForm.post_title) }}
        </div>
        <div class="form-group">
            {{ form_row(postForm.post_content) }}
        </div>

        {{ form_row(postForm.create, { 'label': 'Create' }) }}
    {{ form_end(postForm) }}
{% endblock %}